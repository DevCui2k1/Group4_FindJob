@model FindJobSolution.ViewModels.System.ReportDataVM
@{
	ViewData["Title"] = "Trang chủ";
}

<div class="container-fluid px-4">
	<h1 class="mt-4">Thống kê</h1>
	<ol class="breadcrumb mb-4">
		<li class="breadcrumb-item active">Thống kê website</li>
	</ol>
	<div class="row row-cols-4">
		<div class="col-xl-3 col-md-6">
			<div class="card bg-primary text-white mb-4">
				<div class="card-body">
					<a style="font-weight: bold; font-size: 40px;">@Html.DisplayFor(model =>  model.TotalJobSeeker)</a>
					<a>Người tìm việc</a>
				</div>
			</div>
		</div>
		<div class="col-xl-3 col-md-6">
			<div class="card bg-warning text-white mb-4">
				<div class="card-body">
					<a style="font-weight: bold; font-size: 40px;">@Html.DisplayFor(model =>  model.TotalRecuiter)</a>
					<a>Nhà tuyển dụng</a>
				</div>
			</div>
		</div>
		<div class="col-xl-3 col-md-6">
			<div class="card bg-success text-white mb-4">
				<div class="card-body">
					<a style="font-weight: bold; font-size: 40px;"> @Html.DisplayFor(model =>  model.TotalJobInformation)</a>
					<a>Công việc đang tuyển</a>
				</div>
			</div>
		</div>
		<div class="col-xl-3 col-md-6">
			<div class="card bg-info text-white mb-4">
				<div class="card-body">
					<a style="font-weight: bold; font-size: 40px;"> @Html.DisplayFor(model =>  model.TotalJob)</a>
					<a>Ngành nghề</a>
				</div>
			</div>
		</div>


	</div>

</div>
					